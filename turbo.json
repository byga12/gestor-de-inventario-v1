{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ],
            "env": [
                "DB_HOST",
                "DB_PORT",
                "POSTGRESQL_DB_NAME",
                "POSTGRESQL_USERNAME",
                "POSTGRESQL_PASSWORD",
                "JWT_SECRET",
                "PORT"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}