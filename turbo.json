{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ],
            "env": [
                "DATABASE_PUBLIC_URL",
                "DATABASE_URL",
                "PGDATA",
                "PGHOST",
                "PGPORT",
                "POSTGRES_DB",
                "POSTGRES_PASSWORD",
                "POSTGRES_USER",
                "JWT_SECRET",
                "NODE_ENV"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}